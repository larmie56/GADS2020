<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_skill_iq_leaders"
            android:layout_width="96dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/skill_iq_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_skill_iq_learner" />

        <TextView
            android:id="@+id/text_skill_iq_leader_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/placeholder"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/image_skill_iq_leaders"
            app:layout_constraintTop_toTopOf="@id/image_skill_iq_leaders"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_skill_iq_leader_score"/>

        <TextView
            android:id="@+id/text_skill_iq_leader_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/placeholder"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/text_skill_iq_leader_name"
            app:layout_constraintTop_toBottomOf="@id/text_skill_iq_leader_name"
            app:layout_constraintEnd_toEndOf="@id/text_skill_iq_leader_name"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>